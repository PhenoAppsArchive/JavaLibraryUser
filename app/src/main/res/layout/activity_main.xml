<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="org.wheatgenetics.javalibraryuser.MainActivity">

    <TextView
        android:id="@+id/adjustTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="adjustTextView"
        android:layout_marginTop="50dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/internalDirTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="internalDirTextView"
        android:layout_marginTop="100dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/externalPrivateDirTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="externalPrivateDirTextView"
        android:layout_marginTop="150dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/externalPublicDirTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="externalPublicDirTextView"
        android:layout_marginTop="200dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="internalDir.list()"
        android:textAllCaps="false"
        android:layout_marginTop="250dp"
        android:onClick="onButtonClick"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/multiLineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="multiLineTextView"
        android:layout_marginBottom="50dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>